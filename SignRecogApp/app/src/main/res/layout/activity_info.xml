<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_1">


    <TextView
        android:id="@+id/sign_transl"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/sign_transl"
        android:textAppearance="@style/start"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/line_1"
        app:layout_constraintBottom_toTopOf="@id/cameraButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/infoButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/ellipse_1"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
