<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/android_1"
    >

    <TextView
        android:id="@+id/sign_transl"
        android:layout_width="292dp"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/sign_transl"
        android:textAppearance="@style/sign_transl" />

    <View
        android:id="@+id/line_1"
        android:layout_width="269dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/line_1" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="178.49dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/ellipse_2"
        android:elevation="4dp"
        android:text="@string/start"
        android:textAppearance="@style/start"
        android:gravity="center_horizontal|center_vertical"
        />


    <Button
        android:id="@+id/infoButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="183dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/ellipse_1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id">
    </Button>

</RelativeLayout>
